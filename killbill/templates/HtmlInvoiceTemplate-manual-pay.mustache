                <th>{{text.invoiceItemServicePeriod}}</td>
                <th colspan=2 class="right">{{text.invoiceItemAmount}}</td>
            </tr>
            <tr>
                <th colspan=6 class="hr"></th>
            </tr>
            {{#invoice.nonTaxInvoiceItems}}
            <tr class="item">
                <td>{{description}}</td>
                <td>
                	{{#subscriptionCustomFields}}
                	<span class="custom-field {{fieldName}}">{{fieldValue}}</span>
                	{{/subscriptionCustomFields}}
                </td>
                <td>{{planName}}</td>
                <td>{{formattedStartDate}}{{#formattedEndDate}} - {{formattedEndDate}}{{/formattedEndDate}}</td>
                <td class="right">{{invoice.currency}}</td>
                <td class="right">{{formattedAmount}}</td>
            </tr>
            {{/invoice.nonTaxInvoiceItems}}
            <tr>
                <td colspan=6 class="hr"/>
            </tr>
            <tr>
                <td colspan=5 class="head right" style="width:100%">{{text.invoiceAmount}}</td>
                <td class="right">{{invoice.formattedNonTaxChargedAmount}}</td>
            </tr>
            {{#invoice.taxInvoiceItemsGroupedByDescription}}
            <tr>
                <td colspan=5 class="head right" style="width:100%">{{description}}</td>
                <td class="right">{{formattedAmount}}</td>
            </tr>
            {{/invoice.taxInvoiceItemsGroupedByDescription}}
            <tr>
                <td colspan=5 class="head right">{{text.invoiceAmountPaid}}</td>
                <td class="right">{{invoice.basicFormattedPaidAmount}}</td>
            </tr>
            <tr>
                <td colspan=5 class="head right">{{text.invoiceBalance}}</td>
                <td class="right"><b>{{invoice.basicFormattedBalance}}</b></td>
            </tr>
        </table>

